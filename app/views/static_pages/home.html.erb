<% if logged_in? %>
<div class="row">
  <aside class="col-sm-3 content-box">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section class="micropost_form">
      <%= render 'shared/micropost_form' %>
    </section>
  </aside>
  <div class="col-sm-6 content-box feed-box">
    <h3>Grunt Feed</h3>
    <%= render 'shared/feed' %>
  </div>
</div>
<% else %>
  <%= render 'home_logged_out' %>
<% end %>
