<% provide(:title, "Forgot Password") %>
<h1>Forgot Password</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4 content-box loginbox">
  <div class="log-in-flash"><%= render 'layouts/flash' %></div>
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      <br>
      <%= f.submit "Submit", class: "btn btn-primary btn-login", style: "margin-bottom: 15px;" %>
    <% end %>
  </div>
</div>
