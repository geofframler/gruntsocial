<% provide(:title, 'Contact') %>
<h1>Contact</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4 content-box loginbox">
  <div class="log-in-flash"><%= render 'layouts/flash' %></div>
    <%= form_for @contact_form do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control" %>

      <%= f.input :message, class: "form-control" %>

      <%= f.submit "Send", class: "btn btn-primary btn-login" %>
    <% end %>
  </div>
</div>
