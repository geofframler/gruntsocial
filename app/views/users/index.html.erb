<% provide(:title, 'All Users') %>
<h1>All Users</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3 content-box">
    <%= will_paginate(renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer,
                      class: 'text-center') %>

    <ul class="users">
      <% @users.each do |user| %>
        <%= render user %>
      <% end %>
    </ul>

    <%= will_paginate(renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer,
                      class: 'text-center') %>
  </div>
</div>
