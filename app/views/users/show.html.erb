<% provide(:title, @user.name) %>
<div class="row">
  <aside class="content-box profile-box">
    <section class="user_info">
      <h1>
        <div class="gravatar_profile">
        <%= gravatar_for @user %>
        </div>
        <%= @user.name %>
        <%= render 'follow_form' if logged_in? %>
      </h1>
      <% if current_user == @user %>
        <div class="profile_link_edit"><%= link_to "Edit Profile", edit_user_path(current_user) %></div>
      <% end %>
    </section>
    <section class="stats">
        <%= render 'shared/stats' %>
    </section>
    <% if current_user == @user %>
    <section class="micropost_form">
      <%= render 'shared/micropost_form' %>
    </section>
    <% end %>
  </aside>
  <div class="content-box feed-box">
    <% if @user.microposts.any? %>
      <h3>Grunts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate(@microposts,
                        renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer,
                        class: 'text-center') %>
    <% else %>
      <% if current_user == @user %>
        <h3>Grunts (0)</h3>
        <p>You have not Grunted yet! Get started with the form on the left.</p>
        <p>And while you're at it, why not follow some other <%= link_to "users", users_url %> to view their Grunts on the homepage too?!</p>
      <% else %>
        <h3>Grunts (0)</h3>
        <p><%= @user.name %> has not started Grunting yet, follow them to view their posts on the homepage when they do!</p>
      <% end %>
    <% end %>
  </div>
</div>
